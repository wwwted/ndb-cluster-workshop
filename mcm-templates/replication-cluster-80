create site --hosts=127.0.0.1 mysite;
add package --basedir=/home/opc/workshop/cluster-8030 cluster8030;

create cluster --package=cluster8030 --processhosts=ndb_mgmd:145@127.0.0.1,ndbmtd@127.0.0.1,ndbmtd@127.0.0.1 mycluster;
add process --processhosts=mysqld:146@127.0.0.1,mysqld:148@127.0.0.1 mycluster;
add process --processhosts=ndbapi@127.0.0.1,ndbapi@127.0.0.1 mycluster;
add process --processhosts=ndbapi@127.0.0.1,ndbapi@127.0.0.1 mycluster;
set port:mysqld:146=53316 mycluster;
set port:mysqld:148=53317 mycluster;
set PortNumber:ndb_mgmd:145=1186 mycluster;
set server-id:mysqld:146=53316 mycluster;
set server-id:mysqld:148=53317 mycluster;
set binlog-format:mysqld=ROW mycluster;
set log-bin:mysqld=binlog mycluster;
set ndb_log_bin:mysqld=ON mycluster;
set ndb_batch_size:mysqld=16M mycluster;
set slave_allow_batching:mysqld=1 mycluster;
set ndb-cluster-connection-pool:mysqld=2 mycluster;


create cluster --package=cluster8030 --processhosts=ndb_mgmd:145@127.0.0.1,ndbmtd@127.0.0.1,ndbmtd@127.0.0.1 mycluster2;
add process --processhosts=mysqld:146@127.0.0.1,mysqld:148@127.0.0.1 mycluster2;
add process --processhosts=ndbapi@127.0.0.1,ndbapi@127.0.0.1 mycluster2;
add process --processhosts=ndbapi@127.0.0.1,ndbapi@127.0.0.1 mycluster2;
set port:mysqld:146=53326 mycluster2;
set port:mysqld:148=53327 mycluster2;
set PortNumber:ndb_mgmd:145=1286 mycluster2;
set server-id:mysqld:146=53326 mycluster2;
set server-id:mysqld:148=53327 mycluster2;
set binlog-format:mysqld=ROW mycluster2;
set log-bin:mysqld=binlog mycluster2;
set ndb_log_bin:mysqld=ON mycluster;
set ndb_batch_size:mysqld=16M mycluster2;
set slave_allow_batching:mysqld=1 mycluster2;
set ndb-cluster-connection-pool:mysqld=2 mycluster2;

start cluster mycluster;
show status -r mycluster;

start cluster mycluster2;
show status -r mycluster2;
